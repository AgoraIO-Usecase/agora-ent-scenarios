<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="play_zone_widget_roundStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="play_zone_roundStyle_6">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6%</item>
    </style>

    <style name="play_zone_roundStyle_16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="play_zone_alert_dialog" parent="Theme.AppCompat.Dialog">
        <item name="alertDialogStyle">@style/play_zone_alert_dialog_style</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="enableEdgeToEdge">true</item>
    </style>


    <style name="play_zone_alert_dialog_style" parent="AlertDialog.AppCompat">
        <item name="android:layout">@layout/play_zone_alert_dialog_layout</item>
    </style>

    <style name="play_zone_chatListView_style">
        <item name="aui_barrage_normal_layout_bg">@drawable/play_zone_bg_live_message</item>
        <item name="aui_barrage_custom_layout_bg">@drawable/play_zone_bg_live_message</item>
        <item name="aui_barrage_local_layout_bg">@drawable/play_zone_bg_live_message</item>
        <!--  列表子 item 事件拦截 -->
        <item name="aui_barrage_interceptTouchEvent">non_intercept</item>
        <!--  列表事件拦截 -->
        <item name="aui_interceptTouchEvent">non_intercept</item>
    </style>
</resources>