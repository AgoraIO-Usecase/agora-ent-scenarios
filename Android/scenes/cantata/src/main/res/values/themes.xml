<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cantataBeautyInputStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">11</item>
        <item name="android:textColorHint">#C7C7C7</item>
        <item name="android:background">@drawable/bg_full_grey_r50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="cantataSongRankBtnStyle">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_to_white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="cantata_cornerTinyStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>