<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pure1v1_dashboard_corner_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DashboardFragment">

    <TableLayout
        android:id="@+id/tlStatistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pure1v1_dashboard_up"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TableRow android:paddingVertical="3dp">
            <TextView
                android:id="@+id/tvEncodeResolution"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_encode_resolution" />

            <TextView
                android:id="@+id/tvStatisticEncodeFPS"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_encode_fps" />
        </TableRow>

        <TableRow android:paddingVertical="3dp">

            <TextView
                android:id="@+id/tvStatisticUpBitrate"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_up_bitrate" />

            <TextView
                android:id="@+id/tvStatisticUpLossPackage"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_up_loss_package" />
        </TableRow>

        <TableRow android:paddingVertical="3dp">

            <TextView
                android:id="@+id/tvStatisticUpNet"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_up_net_speech" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/pure1v1_dashboard_down"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TableRow android:paddingVertical="3dp">

            <TextView
                android:id="@+id/tvReceiveResolution"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_receive_resolution" />

            <TextView
                android:id="@+id/tvStatisticReceiveFPS"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_receive_fps" />
        </TableRow>

        <TableRow android:paddingVertical="3dp">

            <TextView
                android:id="@+id/tvStatisticDownBitrate"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_down_bitrate" />

            <TextView
                android:id="@+id/tvStatisticDownLossPackage"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_down_loss_package" />
        </TableRow>

        <TableRow android:paddingVertical="3dp">

            <TextView
                android:id="@+id/tvStatisticDownNet"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_down_net_speech" />

            <TextView
                android:id="@+id/tvStatisticDownDelay"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@string/pure1v1_dashboard_delay" />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>