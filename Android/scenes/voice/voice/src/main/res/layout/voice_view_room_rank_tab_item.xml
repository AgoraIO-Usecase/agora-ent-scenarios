<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtTabText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="9dp"
        android:text="@string/voice_room_contribution_ranking"
        android:textColor="@color/voice_dark_grey_color_040925"
        android:textSize="@dimen/voice_sp_15"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <View
        android:id="@+id/vTabTip"
        android:layout_width="24dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/voice_drawable_tab_indicator"
        app:layout_constraintEnd_toEndOf="@id/mtTabText"
        app:layout_constraintStart_toStartOf="@id/mtTabText"
        app:layout_constraintTop_toBottomOf="@id/mtTabText" />
</androidx.constraintlayout.widget.ConstraintLayout>