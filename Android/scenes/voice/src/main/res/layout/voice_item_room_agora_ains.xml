<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtNoiseSuppressionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/voice_color_3c4267"
        android:textSize="@dimen/voice_sp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mtSettingOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mtSettingOff"
        tools:text="@string/voice_chatroom_setting_ains" />

    <!--   传统强 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtTraditionalStrong"
        style="@style/voice_bottom_sheet_frame_text_style"
        android:layout_marginEnd="4dp"
        android:background="@drawable/voice_bg_rect_radius4_grey"
        android:minWidth="38dp"
        android:text="@string/voice_chatroom_setting_traditional_strong"
        android:textColor="@color/voice_dark_grey_color_979cbb"
        app:layout_constraintBottom_toBottomOf="@+id/mtSettingOff"
        app:layout_constraintEnd_toStartOf="@+id/mtTraditionalWeakness"
        app:layout_constraintTop_toTopOf="@+id/mtSettingOff" />

    <!--   传统弱 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtTraditionalWeakness"
        style="@style/voice_bottom_sheet_frame_text_style"
        android:layout_marginEnd="4dp"
        android:background="@drawable/voice_bg_rect_radius4_grey"
        android:minWidth="38dp"
        android:text="@string/voice_chatroom_setting_traditional_weakness"
        android:textColor="@color/voice_dark_grey_color_979cbb"
        app:layout_constraintBottom_toBottomOf="@+id/mtSettingOff"
        app:layout_constraintEnd_toStartOf="@+id/mtAiStrong"
        app:layout_constraintTop_toTopOf="@+id/mtSettingOff" />

    <!--   AI 强 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtAiStrong"
        style="@style/voice_bottom_sheet_frame_text_style"
        android:layout_marginEnd="4dp"
        android:background="@drawable/voice_bg_rect_radius4_grey"
        android:minWidth="38dp"
        android:text="@string/voice_chatroom_setting_ai_strong"
        android:textColor="@color/voice_dark_grey_color_979cbb"
        app:layout_constraintBottom_toBottomOf="@+id/mtSettingOff"
        app:layout_constraintEnd_toStartOf="@+id/mtAiWeakness"
        app:layout_constraintTop_toTopOf="@+id/mtSettingOff" />

    <!--   AI 弱 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtAiWeakness"
        style="@style/voice_bottom_sheet_frame_text_style"
        android:layout_marginEnd="4dp"
        android:background="@drawable/voice_bg_rect_radius4_grey"
        android:minWidth="38dp"
        android:text="@string/voice_chatroom_setting_ai_weakness"
        android:textColor="@color/voice_dark_grey_color_979cbb"
        app:layout_constraintBottom_toBottomOf="@+id/mtSettingOff"
        app:layout_constraintEnd_toStartOf="@+id/mtSettingCustom"
        app:layout_constraintTop_toTopOf="@+id/mtSettingOff" />

    <!--   自定义 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtSettingCustom"
        style="@style/voice_bottom_sheet_frame_text_style"
        android:layout_marginEnd="4dp"
        android:minWidth="38dp"
        android:text="@string/voice_chatroom_setting_custom"
        app:layout_constraintBottom_toBottomOf="@+id/mtSettingOff"
        app:layout_constraintEnd_toStartOf="@+id/mtSettingOff"
        app:layout_constraintTop_toTopOf="@+id/mtSettingOff" />

    <!--  关闭  -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtSettingOff"
        style="@style/voice_bottom_sheet_frame_text_style"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/voice_bg_rect_radius4_grey"
        android:minWidth="38dp"
        android:text="@string/voice_chatroom_off"
        android:textColor="@color/voice_dark_grey_color_979cbb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:dividerColor="@color/voice_divider_color_1f979797"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
