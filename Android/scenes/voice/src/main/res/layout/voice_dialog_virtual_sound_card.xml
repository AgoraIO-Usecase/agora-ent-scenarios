<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/voice_bg_rect_top_radius20_white"
    tools:theme="@style/Theme.AppCompat">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/voice_bg_rect_top_radius20_gradient_white"
        app:layout_constraintBottom_toBottomOf="@+id/mtBottomSheetTitle"
        app:layout_constraintTop_toTopOf="@+id/ivBottomSheetTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBottomSheetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:src="@drawable/voice_icon_room_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBottomSheetBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingTop="10dp"
        android:paddingEnd="14dp"
        android:paddingBottom="10dp"
        android:src="@drawable/voice_icon_back_grey"
        app:layout_constraintBottom_toBottomOf="@+id/mtBottomSheetTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mtBottomSheetTitle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtBottomSheetTitle"
        style="@style/voice_bottom_sheet_title_style"
        android:text="@string/voice_chatroom_virtual_sound_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBottomSheetTitle" />

    <!-- 输入设备  -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtInputDevice"
        style="@style/voice_bottom_sheet_text_style"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="15dp"
        android:text="@string/voice_chatroom_input_device"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mtBottomSheetTitle" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/voice_chatroom_external_mircrophone"
        android:textColor="@color/voice_dark_grey_color_979cbb"
        app:layout_constraintBottom_toBottomOf="@id/mtInputDevice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mtInputDevice" />

    <!--  Virtual sound card switch -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtSoundCardSwitch"
        style="@style/voice_bottom_sheet_text_style"
        android:layout_marginStart="20dp"
        android:text="@string/voice_chatroom_virtual_sound_card_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtInputDevice" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/mcbSoundCardSwitch"
        style="@style/voice_bottom_sheet_checkbox"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@id/mtSoundCardSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mtSoundCardSwitch" />

    <!--  预设音效  -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtPresetSound"
        style="@style/voice_bottom_sheet_text_style"
        android:layout_marginStart="20dp"
        android:text="@string/voice_chatroom_preset_sound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtSoundCardSwitch" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPresetSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/voice_bg_rect_radius32_blue"
        android:padding="12dp"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/mtPresetSound">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPresetSoundAvatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/voice_bg_oval_white30"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/voice_seat_roundStyle" />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideHorizontal50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtPresetSoundType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/voice_sp_14"
            app:layout_constraintBottom_toTopOf="@id/guideHorizontal50"
            app:layout_constraintStart_toEndOf="@id/ivPresetSoundAvatar"
            tools:text="Susan Stark" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtPresetSoundTypeTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/voice_color_3c4267"
            android:textSize="@dimen/voice_sp_12"
            app:layout_constraintStart_toEndOf="@id/ivPresetSoundAvatar"
            app:layout_constraintTop_toBottomOf="@id/guideHorizontal50"
            tools:text="Susan Stark" />

        <!--            <androidx.appcompat.widget.AppCompatImageButton-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:background="@color/voice_transparent"-->
        <!--                android:padding="12dp"-->
        <!--                android:src="@drawable/voice_icon_arrow_down"-->
        <!--                app:layout_constraintBottom_toBottomOf="parent"-->
        <!--                app:layout_constraintEnd_toEndOf="parent"-->
        <!--                app:layout_constraintTop_toTopOf="parent" />-->

        <Spinner
            android:id="@+id/spinnerPresetSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- gain adjustment   -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtGainAdjust"
        style="@style/voice_bottom_sheet_text_style"
        android:layout_marginStart="20dp"
        android:text="@string/voice_chatroom_gain_adjust"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPresetSound" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtGainAdjustValue"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:gravity="end"
        android:textColor="@color/voice_color_3c4267"
        android:textSize="@dimen/voice_sp_12"
        app:layout_constraintBottom_toBottomOf="@id/mtGainAdjust"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mtGainAdjust"
        tools:text="3.1f" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/pbGainAdjustValue"
        style="@style/voice_bottom_sheet_progress"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="120dp"
        android:contentDescription="@string/voice_chatroom_gain_adjust"
        android:max="40"
        android:thumb="@drawable/voice_icon_progress_thumb20"
        app:layout_constraintBottom_toBottomOf="@id/mtGainAdjust"
        app:layout_constraintEnd_toStartOf="@id/mtGainAdjustValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mtGainAdjust"
        tools:progress="10" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtGainAdjustTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/voice_chatroom_gain_adjust_tips"
        android:textColor="@color/voice_dark_grey_color_979cbb"
        android:textSize="@dimen/voice_sp_12"
        app:layout_constraintStart_toStartOf="@id/mtGainAdjust"
        app:layout_constraintTop_toBottomOf="@id/mtGainAdjust" />

    <!-- mirco phone type   -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtMircoPhoneType"
        style="@style/voice_bottom_sheet_text_style"
        android:layout_marginStart="20dp"
        android:text="@string/voice_chatroom_mircrophone_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtGainAdjustTips" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtMircoPhoneTypeValue"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:gravity="end"
        android:textColor="@color/voice_color_3c4267"
        android:textSize="@dimen/voice_sp_12"
        app:layout_constraintBottom_toBottomOf="@id/mtMircoPhoneType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mtMircoPhoneType"
        tools:text="2" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/pbMircoPhoneTypeValue"
        style="@style/voice_bottom_sheet_progress"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="120dp"
        android:contentDescription="@string/voice_chatroom_mircrophone_type"
        android:max="4"
        android:thumb="@drawable/voice_icon_progress_thumb20"
        app:layout_constraintBottom_toBottomOf="@id/mtMircoPhoneType"
        app:layout_constraintEnd_toStartOf="@id/mtMircoPhoneTypeValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mtMircoPhoneType"
        tools:progress="2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtMircoPhoneTypeTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/voice_chatroom_mircrophone_type_tips"
        android:textColor="@color/voice_dark_grey_color_979cbb"
        android:textSize="@dimen/voice_sp_12"
        app:layout_constraintStart_toStartOf="@id/mtMircoPhoneType"
        app:layout_constraintTop_toBottomOf="@id/mtMircoPhoneType" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSoundCardError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/voice_icon_room_tips"
        android:drawablePadding="5dp"
        android:text="@string/voice_chatroom_sound_card_error"
        android:textColor="@color/red_e0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtInputDevice" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSoundCardSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/voice_chatroom_sound_card_supports"
        android:textColor="@color/voice_color_3c4267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSoundCardError" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupSoundCardAbnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tvSoundCardError,tvSoundCardSupport"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupSoundCardSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="mtSoundCardSwitch,mcbSoundCardSwitch"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupSoundCardSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="mtPresetSound,layoutPresetSound,
mtGainAdjust,mtGainAdjustValue,pbGainAdjustValue,mtGainAdjustTips,
mtMircoPhoneType,mtMircoPhoneTypeValue,pbMircoPhoneTypeValue,mtMircoPhoneTypeTips"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>