<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/show_pk_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/iPKTimeText"
            android:layout_width="98dp"
            android:layout_height="23dp"
            android:layout_marginTop="109dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/show_pk"
            android:textColor="@color/white"
            android:background="@mipmap/show_pk_time_bg">
        </androidx.appcompat.widget.AppCompatTextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <FrameLayout
                android:id="@+id/iBroadcasterAView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/userNameA"
                    android:layout_width="69dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="51dp"
                    android:layout_marginEnd="67.5dp"
                    android:gravity="center"
                    android:text="@string/show_pk"
                    android:textSize="12sp"
                    android:textColor="@color/white">
                </TextView>

                <ImageView
                    android:id="@+id/userMicOnViewA"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginEnd="16dp"
                    android:background="@mipmap/show_mic_bg">
                </ImageView>

                <ImageView
                    android:id="@+id/userMicOffViewA"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="11dp"
                    android:background="@mipmap/show_mic_off_bg"
                    android:visibility="invisible">
                </ImageView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/iBroadcasterBView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/userNameB"
                    android:layout_width="69dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="51dp"
                    android:layout_marginEnd="67.5dp"
                    android:gravity="center"
                    android:text="@string/show_pk"
                    android:textSize="12sp"
                    android:textColor="@color/white">
                </TextView>

                <ImageView
                    android:id="@+id/userMicOnViewB"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginEnd="16dp"
                    android:background="@mipmap/show_mic_bg">
                </ImageView>

                <ImageView
                    android:id="@+id/userMicOffViewB"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="11dp"
                    android:background="@mipmap/show_mic_off_bg"
                    android:visibility="invisible">
                </ImageView>
            </FrameLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/iPKProcessBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_gravity="center"
            android:layout_width="355dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/show_pk_progress_bg"/>

    </LinearLayout>

</FrameLayout>