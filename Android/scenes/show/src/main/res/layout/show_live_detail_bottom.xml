<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    tools:background="@color/grey_5B">

    <FrameLayout
        android:id="@+id/layoutChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:visibility="invisible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChat"
            android:layout_width="85dp"
            android:layout_height="38dp"
            android:textColor="@color/white_80_percent"
            android:textSize="12sp"
            android:text="@string/show_live_bottom_chat"
            android:gravity="center"
            android:background="@drawable/show_live_detail_bottom_chat_bg"/>
    </FrameLayout>


    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/flPK"
                android:layout_width="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/show_live_detail_bottom_btn_bg"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/show_live_bottom_ic_pk" />

                <View
                    android:id="@+id/vPKDot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/show_live_detail_bottom_btn_dot"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/flLinking"
                android:layout_width="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivLinking"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/show_live_detail_bottom_btn_bg"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/show_live_bottom_ic_linking" />

                <View
                    android:id="@+id/vLinkingDot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/show_live_detail_bottom_btn_dot"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </FrameLayout>



            <ImageView
                android:id="@+id/ivBeauty"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/show_live_bottom_ic_beauty"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:visibility="visible"
                android:background="@drawable/show_live_detail_bottom_btn_bg" />


            <ImageView
                android:id="@+id/ivMusic"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/show_live_bottom_ic_music"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                tools:visibility="visible"
                android:background="@drawable/show_live_detail_bottom_btn_bg" />


            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/show_live_bottom_ic_setting"
                android:padding="8dp"
                tools:visibility="visible"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="15dp"
                android:background="@drawable/show_live_detail_bottom_btn_bg" />


        </LinearLayout>


    </HorizontalScrollView>

</LinearLayout>

