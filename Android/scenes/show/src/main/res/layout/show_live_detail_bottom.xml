<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:background="@color/grey_5B">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="85dp"
        android:layout_height="38dp"
        android:textColor="@color/white_80_percent"
        android:textSize="12sp"
        android:text="@string/show_live_bottom_chat"
        android:gravity="center"
        android:background="@drawable/show_live_detail_bottom_chat_bg"/>

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPK"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/show_live_bottom_ic_pk"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:background="@drawable/show_live_detail_bottom_btn_bg" />


            <ImageView
                android:id="@+id/ivLinking"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/show_live_bottom_ic_linking"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:background="@drawable/show_live_detail_bottom_btn_bg" />



            <ImageView
                android:id="@+id/ivBeauty"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/show_live_bottom_ic_beauty"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:background="@drawable/show_live_detail_bottom_btn_bg" />


            <ImageView
                android:id="@+id/ivMusic"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/show_live_bottom_ic_music"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:background="@drawable/show_live_detail_bottom_btn_bg" />


            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/show_live_bottom_ic_setting"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:background="@drawable/show_live_detail_bottom_btn_bg" />


        </LinearLayout>


    </HorizontalScrollView>

</LinearLayout>

