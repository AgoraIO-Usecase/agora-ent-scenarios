<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cover_user_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_item_user_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:ellipsize="marquee"
        android:gravity="start|center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/btn_item_invite"
        app:layout_constraintStart_toEndOf="@+id/cover_user_icon"
        app:layout_constraintTop_toTopOf="@id/cover_user_icon" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_item_invite"
        android:background="@drawable/show_pk_or_link_btn_bg"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:layout_marginEnd="25dp"
        android:text="@string/show_application"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/cover_user_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cover_user_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:background="@color/grey_e1"
        app:layout_constraintTop_toBottomOf="@id/cover_user_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>