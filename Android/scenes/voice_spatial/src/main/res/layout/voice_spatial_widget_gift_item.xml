<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="44dp"
    android:maxWidth="400dp"
    android:minWidth="200dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/voice_bg_widget_gift">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:shapeAppearance="@style/ui_widget_roundStyle"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/nick_name"
        android:layout_marginStart="6dp"
        android:gravity="left"
        android:maxLines="2"
        android:textColor="@color/voice_white"
        android:layout_marginRight="6dp"
        android:minWidth="72dp"
        android:textSize="@dimen/voice_sp_12"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        app:layout_constraintRight_toLeftOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxHeight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gift_count"
        android:layout_width="44dp"
        android:layout_height="44dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginEnd="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/voice_white"
        android:gravity="center"
        android:textSize="@dimen/voice_sp_12"
        android:id="@+id/gift_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>