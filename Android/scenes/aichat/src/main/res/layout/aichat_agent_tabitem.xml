<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTabTitle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/def_text_grey_303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/aichat_TabLayoutTextSelected"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="@string/aichat_public_agent" />

    <View
        android:id="@+id/viewIndicator"
        android:layout_width="18dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvTabTitle"
        app:layout_constraintStart_toStartOf="@id/tvTabTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTabTitle"
        android:background="@drawable/aichat_tablayout_indicator"/>
</androidx.constraintlayout.widget.ConstraintLayout>