<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="def_et_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">11</item>
        <item name="android:textColorHint">#C7C7C7</item>
        <item name="android:background">@drawable/bg_full_radius_white_50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="def_btn_full" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_def_btn_selector</item>
    </style>

    <style name="def_btn_empty" parent="def_btn_full">
        <item name="android:textColor">@color/def_text_color_040</item>
        <item name="android:background">@drawable/bg_def_btn_selector2</item>
    </style>

    <style name="popup_window_style_bottom">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_from_top</item>
    </style>

    <style name="input_v_code" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/bg_full_radius_white_10</item>
        <item name="android:textColor">@color/def_text_color_040</item>
        <item name="android:textSize">18sp</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">2</item>
        <item name="android:layout_marginStart">6dp</item>
    </style>

    <style name="title_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:paddingTop">38dp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

</resources>