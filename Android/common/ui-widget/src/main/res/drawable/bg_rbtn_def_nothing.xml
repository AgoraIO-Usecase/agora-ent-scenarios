<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center">
                <shape android:shape="rectangle">
                    <size android:width="54dp" android:height="54dp" />
                    <corners android:radius="12dp" />
                    <solid android:color="@color/black_08" />
                    <stroke android:width="1dp" android:color="@color/blue_9F" />
                </shape>
            </item>
            <item android:width="30dp" android:height="30dp" android:drawable="@mipmap/ic_def_nothing" android:gravity="center" tools:ignore="UnusedAttribute" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:gravity="center">
                <shape android:shape="rectangle">
                    <size android:width="54dp" android:height="54dp" />
                    <corners android:radius="12dp" />
                    <solid android:color="@color/black_08" />
                </shape>
            </item>
            <item android:width="30dp" android:height="30dp" android:drawable="@mipmap/ic_def_nothing" android:gravity="center" tools:ignore="UnusedAttribute" />
        </layer-list>
    </item>
</selector>