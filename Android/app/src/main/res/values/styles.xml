        <attr name="app_strokeWidth" format="dimension" />
        <attr name="app_checkedColor" format="color" />
        <attr name="app_defaultColor" format="color" />
        <attr name="app_textLength" format="integer" />
        <attr name="app_backColor" format="color" />
        <attr name="app_textColor" format="color" />
        <attr name="app_circle" format="dimension" />
        <attr name="app_round" format="dimension" />
        <attr name="app_textSize" format="dimension" />
