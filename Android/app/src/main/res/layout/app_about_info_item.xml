<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginTop="42dp"
        android:src="@mipmap/app_ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/app_about_name"
        android:textColor="@color/def_text_color_040"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="版本号：1.0.0.9087"
        android:textColor="@color/def_text_grey_979"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAppName" />

    <!-- 联系客服 -->
    <View
        android:id="@+id/vServicePhone"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/tvVersion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvServicePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/app_about_customer_service"
        android:textColor="@color/def_text_color_3c4"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vServicePhone"
        app:layout_constraintTop_toTopOf="@+id/vServicePhone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvServiceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="PhoneNumb"
        android:textColor="@color/bg_color_blue_31"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tvServicePhone"
        app:layout_constraintTop_toBottomOf="@+id/tvServicePhone" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:dividerColor="@color/grey_f8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vServicePhone" />

    <!-- 官网地址 -->
    <View
        android:id="@+id/vHomeWebPage"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintTop_toBottomOf="@+id/vServicePhone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHomeWebPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/app_about_official_website"
        android:textColor="@color/def_text_color_3c4"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vHomeWebPage"
        app:layout_constraintTop_toTopOf="@+id/vHomeWebPage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHomeWebSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="WebSite"
        android:textColor="@color/bg_color_blue_31"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tvHomeWebPage"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeWebPage" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:dividerColor="@color/grey_f8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vHomeWebPage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSceneSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/app_about_scene_version"
        android:textColor="@color/def_text_grey_6c7"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vHomeWebPage" />

</androidx.constraintlayout.widget.ConstraintLayout>