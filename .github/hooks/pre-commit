bash
#!/bin/bash

for file in $(find . -name gradle.properties); do
    diff=$(git diff HEAD $file)
    
    if [[ -z $diff ]]; then 
        exit 0
    else
        echo "diff: $diff"
        echo "Do not commit keys and secrets in gradle.properties!"
        exit 1
    fi
done

for file in $(find . -name KeyCenter.swift); do
    diff=$(git diff HEAD $file)
    
    if [[ -z $diff ]]; then 
        exit 0
    else
        echo "diff: $diff"
        echo "Do not commit keys and secrets in KeyCenter.swift!"
        exit 1
    fi
done

exit 0